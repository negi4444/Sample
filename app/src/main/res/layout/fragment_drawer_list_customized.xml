        <TextView
            android:id="@+id/Itemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="nitin"
            android:padding="5dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>



</LinearLayout>